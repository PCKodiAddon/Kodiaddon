<?xml version='1.0' encoding='utf-8'?>
<addons>
    <!-- Repository Addon -->
    <addon id="repository.weebaymodz" name="WeebayModz Repository" version="1.0.0">
        <extension point="xbmc.addon.repository" name="WeebayModz Repository">
            <info>https://pckodiaddon.github.io/Kodiaddon/addons.xml</info>
            <checksum>https://pckodiaddon.github.io/Kodiaddon/addons.xml.md5</checksum>
            <datadir>https://pckodiaddon.github.io/Kodiaddon/zip</datadir>
        </extension>
        <!-- Adding metadata for repository -->
        <extension point="xbmc.addon.metadata">
            <summary>WeebayModz Repository</summary>
            <description>Repository for WeebayModz Kodi addons</description>
            <platform>all</platform>
        </extension>
    </addon>

    <!-- Video Plugin Addon -->
    <addon id="plugin.video.weebaymodz" name="WeebayModz" version="1.0.0">
        <requires>
            <import addon="xbmc.python" version="3.0.0" />
        </requires>
        <extension point="xbmc.python.pluginsource" library="addon.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>WeebayModz Addon</summary>
            <description>WeebayModz Kodi Video Addon</description>
            <platform>all</platform>
        </extension>
    </addon>
</addons>
